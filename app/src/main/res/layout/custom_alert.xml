<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="12dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="4dp"
    android:background="#ffffff">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#424242"
        android:textAllCaps="true"
        android:gravity="top"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:id="@+id/alert_header_text"
        android:textSize="16sp"
        android:text="Header" />

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/body"
        android:orientation="horizontal"
        android:layout_below="@+id/alert_header_text"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/alert_header_text"
            android:ems="10"
            android:id="@+id/alert_body_text"
            android:text="shdbhsdbhqbshbahfvbkafdbvk"
            android:layout_centerHorizontal="true"
            android:textSize="14sp"
            />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="12dp"
        android:paddingBottom="8dp"
        android:layout_below="@+id/body"
        android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:layout_toLeftOf="@+id/positiveText"
                android:id="@+id/negativeText"
                android:textSize="14sp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="8dp"
                android:text= "REJECT"
                android:paddingBottom="8dp"
                android:textColor="#424242"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:layout_alignParentRight="true"
                android:textSize="14sp"
                android:layout_weight="1"
                android:id="@+id/positiveText"
                android:textAllCaps="true"
                android:textColor="#424242"
                android:text="ACCEPT"
                android:paddingTop="8dp"
                android:paddingBottom="8dp" />
    </RelativeLayout>
</RelativeLayout>